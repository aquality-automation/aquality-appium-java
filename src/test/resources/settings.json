{
  "platformName" : "android",
  "isRemote": true,
  "remoteConnectionUrl": "http://127.0.0.1:4723/wd/hub",
  "screensLocation": "integration",

  "driverSettings": {
    "android": {
      "deviceKey": "Nexus",
      "applicationPath": "./src/test/resources/apps/ApiDemos-debug.apk",
      "capabilities": {
        "automationName": "UIAutomator2",
        "eventTimings": true,
        "uiautomator2ServerInstallTimeout": 30000
      }
    },
    "ios": {
      "deviceKey": "iPhone_11",
      "applicationPath": "./src/test/resources/apps/TestApp.app.zip",
      "capabilities": {
        "automationName": "XCUITest",
        "platformName": "iOS"
      }
    }
  },
  "localServiceSettings": {
    "arguments": {
      "--allow-insecure": "chromedriver_autodownload"
    },
    "capabilities": {
    }
  },
  "timeouts": {
    "timeoutImplicit" : 0,
    "timeoutCondition" : 15,
    "timeoutPollingInterval": 300,
    "timeoutCommand":120
  },
  "retry": {
    "number": 2,
    "pollingInterval": 300
  },
  "logger": {
    "language": "en"
  },
  "elementCache": {
    "isEnabled": true
  }
}